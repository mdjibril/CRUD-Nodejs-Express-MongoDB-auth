<h3 style="text-align:center">{{viewTitle}}</h3>

<form action="/staff" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{staff._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{staff.fullName}}">
        <div class="text-danger">
            {{staff.fullNameError}}</div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{staff.email}}">
        <div class="text-danger">
            {{staff.emailError}}</div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{staff.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Department</label>
            <input type="text" class="form-control" name="department" placeholder="Department" value="{{staff.department}}">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Level</label>
            <input type="text" class="form-control" name="level" placeholder="Level" value="{{staff.level}}">
        </div>
        <div class="form-group col-md-6">
            <label>Location</label>
            <input type="text" class="form-control" name="location" placeholder="Location" value="{{staff.location}}">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/staff/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>

